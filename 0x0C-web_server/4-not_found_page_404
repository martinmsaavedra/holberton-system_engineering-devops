#!/usr/bin/env bash
apt-get update
apt-get install -y nginx
echo "Holberton School" | tee /etc/nginx/html/index.nginx-debian.html
echo "Ceci n'est pas une page" | tee /etc/nginx/html/404.html

printf %s "server {
    listen 80;
    listen [::]:80 default_server;
    root   /etc/nginx/html;
    index  index.html index.htm index.nginx-debian.html;
    error_page 404 /404.html;
    location /404 {
      root /etc/nginx/html;
      internal;
    }
}" | tee /etc/nginx/sites-available/default

service nginx restart
