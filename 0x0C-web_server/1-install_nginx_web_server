#!/usr/bin/env bash
#Installs NgineX and set up the configuration
apt-get update
apt-get install -y nginx
echo "Holberton School" > /etc/nginx/html/index.html
printf %s "server {
     listen      80 default_server;
     listen      [::]:80 default_server;
     root        /etc/nginx/html;
     index       index.html;
}
" > /etc/nginx/sites-available/default
service nginx restart
